//while循环语句
#include<stdio.h>
int main()
{
int line = 0;
printf("好好学习\n");
while(line <30000)
{
printf("每天敲代码:%d\n" , line);
line++
}
if(line>= 30000)
printf("to geted some good offers\n");
return 0;
}

























